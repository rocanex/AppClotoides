<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".horizontal.HorizontalReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="412dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/horizon" />

            <ImageView
                android:id="@+id/iv_save_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button2"
                android:padding="5dp"
                android:textColor="@color/purple_500"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_save"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_view_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button2"
                android:padding="5dp"
                android:textColor="@color/purple_500"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_baseline_preview_24"
                android:textStyle="bold"
                android:visibility="gone"/>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/llResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:text="A) REPLANTEO POR DEFLEXION"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDataA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvDataA2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvDataA3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvDataA4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/myTableLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/teal_200" >
                <TableRow
                    android:background="@color/yellow_">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                       android:gravity="center"
                        android:layout_margin="2dp"
                        android:background="@color/yellow"
                        android:text="PUNTO"
                        android:textStyle="bold"
                        android:textColor="@color/purple_500"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                       android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="PROGRESIVAS"
                        android:textStyle="bold"
                        android:textColor="@color/purple_500"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <TextView
                        android:id="@+id/tvIMO"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:text="LONGITUD ENTRE\nPUNTOS"
                        android:textColor="@color/purple_500"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:background="@color/yellow"
                        android:textStyle="bold"
                        android:text="DEFLEXION\nUNITRIA"
                        android:textColor="@color/purple_500"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="DEFLEXION\nREPLANTEO"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="ANGULO DE\nREPLANTEO"
                        android:textStyle="bold"
                        android:textColor="@color/purple_500"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </TableRow>
            </TableLayout>

        </HorizontalScrollView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:text="B) METODO DE LAS COORDENADAS"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDataB1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvDataB2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDataB3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvDataB4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvDataB5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvDataB6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvDataB7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/myTableLayout2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/teal_200">

                <TableRow android:background="@color/yellow_">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                       android:gravity="center"
                        android:layout_margin="2dp"
                        android:text="PROG"
                        android:background="@color/yellow"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:background="@color/yellow"
                        android:text="CUERDA\nUNITARIA"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="DELECCION\nUNITARIA"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="DELECCION\nACUMULADA"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="AZIMUT"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="DH"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="ΔN"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="ΔE"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="N"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="E"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/yellow"
                        android:layout_margin="2dp"
                        android:text="A"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>